	


	<h1>
		<%= current_user&.name %>
	</h1>
	
	<h2> 
		Email: <%= current_user&.email %>
	</h2>

<div class="col-md-8">
	<% if @user.microposts.any? %>
	<h3>Microposts (<%= @user.microposts.count %>)</h3>
	<ol class="microposts">
		<%= render @microposts %>
	</ol>
	<%= will_paginate @microposts %>
	<% end %>
</div>
