<% provide(:title, "Log in") %>
<h1>Log in</h1>
<div class="row">
<div class="col-md-6 col-md-offset-3">
<%= form_for(:session, url: sessions_path) do |d| %>
<%= d.label :email %>
<%= d.email_field :email, class: 'form-control' %>
<%= d.label :password %>
<%= d.password_field :password, class: 'form-control' %>
<%= d.submit "Log in", class: "btn btn-primary" %>
<% end %>

<p>New user? <%= link_to "Sign up now!", signup_path %></p>
</div>
</div>